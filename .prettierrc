{
  "endOfLine": "lf",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2,
        "useTabs": true,
        "proseWrap": "always"
      }
    },
    {
      "files": "*.mdx",
      "options": {
        "tabWidth": 2,
        "useTabs": true,
        "proseWrap": "always"
      }
    }
  ]
}
